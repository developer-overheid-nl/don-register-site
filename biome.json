{
	"$schema": "https://biomejs.dev/schemas/2.2.7/schema.json",
	"vcs": {
		"enabled": true,
		"clientKind": "git",
		"useIgnoreFile": true
	},
	"files": {
		"ignoreUnknown": false,
		"includes": [
			"**",
			"!**/package.json",
			"!**/tsconfig.*",
			"!**/postcss.config.*",
			"!**/.astro",
			"!**/astro.config.*",
			"!**/biome.*",
			"!**/dist",
			"!**/.vscode"
		]
	},
	"formatter": {
		"enabled": true,
		"indentStyle": "space"
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true
		}
	},
	"javascript": {
		"formatter": {
			"quoteStyle": "double"
		},
		"parser": {
			"jsxEverywhere": false
		}
	},
	"css": {
		"formatter": {
			"enabled": true
		},
		"parser": {
			"cssModules": true
		}
	},
	"assist": {
		"enabled": true,
		"actions": {
			"source": {
				"organizeImports": "on"
			}
		}
	}
}
